                    <p>
                        <m>\log_5(1)</m>
                    </p>
                </statement>
            </task>
            <task>
                <statement>
                    <p>
                        <m>\log_2(2)</m>
                    </p>
                </statement>
            </task>
            <task>
                <statement>
                    <p>
                        <m>\log(1)</m>
                    </p>
                </statement>
            </task>
            <task>
                <statement>
                    <p>
                        <m>\ln(e)</m>
                    </p>
                </statement>
            </task>
        </exercise>
